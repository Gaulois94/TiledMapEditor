<ui>
	<menubar name="MenuBar">
		<menu action="FileMenu">
			<menuitem action="NewFile"/>
			<menuitem action="OpenFile"/>
			<separator/>
			<menuitem action="Save"/>
			<menuitem action="SaveAs"/>
		</menu>

		<menu action="EditionMenu">
			<menuitem action="NewTrace"/>
			<menuitem action="NewImage"/>
		</menu>

		<menu action="ToolsMenu">
			<menuitem action="ChangeSize"/>
		</menu>
	</menubar>

	<toolbar name="ToolBar">
		<toolitem action="NewFile"/>
		<toolitem action="OpenFile"/>
		<toolitem action="Save"/>
		<separator/>
		<toolitem action="Zoom+"/>
		<toolitem action="Zoom-"/>
	</toolbar>

	<popup name="SFMLEmptyCase">
		<menuitem action="NewTrace"/>
		<menuitem action="NewImage"/>
	</popup>

	<popup name="SFMLFullCase">
		<menuitem action="DelCase"/>
	</popup>

	<popup name="TilePopup">
		<menuitem action="TileProperties"/>
	</popup>
</ui>
